{
    "name": "website-uptime-monitoring",
    "description": "Website uptime monitoring project",
    "keywords": ["rikkeisoft", "uptime", "monitor"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "alsofronie/eloquent-uuid": "dev-master",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
     "phpunit": "php vendor/phpunit/phpunit/phpunit",
     "phpcs": "php vendor/squizlabs/php_codesniffer/scripts/phpcs",
     "phpcbf": "php vendor/squizlabs/php_codesniffer/scripts/phpcbf"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
